@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to My Secure Webapp</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <p>Hello @User.Identity.Name!</p>
        <p>Claims: @Model.forename</p>
    }
    else
    {
        <p>Please <a asp-controller="Account" asp-action="Login">sign in</a>.</p>
    }

</div>
